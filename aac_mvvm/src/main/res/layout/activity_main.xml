<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LiveData_ViewModel_Test"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>
    <Button
        android:id="@+id/btn_room_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="room_query"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/btn_room_delete"/>
    <Button
        android:id="@+id/btn_room_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="room_delete"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/btn_room_add"/>


    <Button
        android:id="@+id/btn_room_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="room_add"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>